{
  "name": "nao-todo-server",
  "version": "0.0.0",
  "description": "Nao todo server",
  "type": "module",
  "packageManager": "pnpm@9.12.1",
  "author": "Nathan Lee",
  "license": "MIT",
  "scripts": {
    "lint": "npx eslint -c eslint.config.mjs",
    "lint-on-debug": "npx eslint -c eslint.config.mjs --debug",
    "lint:lint-staged": "lint-staged",
    "format": "prettier --write --config .prettierrc .",
    "websrv": "pnpm --filter @nao-todo-server/websrv",
    "reshape": "pnpm --filter @nao-todo-server/reshape",
    "serve": "serve",
    "serve:static": "serve ./public -p 3001 --cors",
    "serve:dist": "serve ./apps/web/dist -p 3003 --single",
    "serve:docs": "serve ./docs -p 3004 --single",
    "serve:config": "serve -c serve.json",
    "serve:https": "serve ./public -p 3001 --ssl-cert ./certs/cert.pem --ssl-key ./certs/key.pem",
    "serve:example": "node ./scripts/serve-example.js",
    "serve:simple": "node ./scripts/simple-static-server.js",
    "serve:simple:8080": "node ./scripts/simple-static-server.js -p 8080"
  },
  "dependencies": {
    "@nao-todo-server/apis": "workspace:*",
    "@nao-todo-server/hooks": "workspace:*",
    "@nao-todo-server/models": "workspace:*",
    "@nao-todo-server/pipelines": "workspace:*",
    "@nao-todo-server/utils": "workspace:*",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.1",
    "md5": "^2.3.0",
    "moment": "^2.30.1",
    "multer": "1.4.5-lts.2",
    "openai": "^4.83.0",
    "serve": "^14.2.4",
    "validator": "^13.12.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@typegoose/typegoose": "^12.9.0",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.3",
    "@types/express": "^5.0.0",
    "@types/md5": "^2.3.5",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.9.0",
    "@types/validator": "^13.12.2",
    "eslint": "^9.14.0",
    "eslint-plugin-vue": "^9.31.0",
    "globals": "^15.12.0",
    "mongoose": "^8.8.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "process": "^0.11.10",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.15.0"
  }
}